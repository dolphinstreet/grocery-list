<section class="list-details">

    <header class="list-header">
        <div class="list-title">
            <div class="title">
                {{#with list.favorite}}
                    <i class="fa-solid fa-star"></i>
                {{/with}}
                {{#unless list.favorite}}
                    <i class="fa-regular fa-star"></i>
                {{/unless}}
                <h1 id="list-name" contenteditable="true">{{list.name}}</h1>
            </div>
            <i class="fa-solid fa-ellipsis-vertical"></i>
        </div>
        <div class="searchbar">
            <input type="text" name="search" placeholder="Search an item" />
        </div>
    </header>

    <div class="list">
        <div class="ingredients-by-category">
            {{#each list.rows}}
                <div class="list-row">
                    <div class="content">
                        <p
                            class="item-amount"
                            contenteditable="false"
                        >{{amount}}</p>
                        <p
                            class="item-unit"
                            contenteditable="false"
                        >{{unit.name}}</p>
                        <p
                            class="item-name"
                            contenteditable="false"
                        >{{ingredient.name}}</p>
                    </div>
                    <i class="fa-regular fa-pen-to-square"></i>
                </div>
            {{/each}}
        </div>

        <div class="checked-items"></div>
    </div>

</section>