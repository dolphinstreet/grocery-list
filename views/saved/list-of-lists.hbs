<h1>Your lists</h1>

<div class="list-wrapper">
    {{#each userLists}}
        <a href="/lists/{{id}}">
            <div class="list-element">
                <div class="list-title">
                    {{#if favorite}}
                        <i data-id="{{id}}" class="fa-solid fa-star"></i>
                    {{else}}
                        <i data-id="{{id}}" class="fa-regular fa-star"></i>
                    {{/if}}
                    <h2>{{name}}</h2>
                </div>
                <i class="fa-regular fa-trash-can"></i>
            </div>
        </a>
    {{/each}}
</div>